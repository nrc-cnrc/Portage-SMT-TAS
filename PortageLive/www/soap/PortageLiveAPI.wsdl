  <operation name="translateTMXCE">
    <soap:operation soapAction="translateTMXCE"/>
    <input> <soap:body encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
                       namespace="urn:cnrc-nrc:portageliveservice" use="encoded"/>
